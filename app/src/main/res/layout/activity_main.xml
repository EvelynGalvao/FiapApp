<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9DEDE"
    tools:context=".MainActivity" >

    <!-- ScrollView para permitir rolagem -->
    <android.widget.ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <!-- LinearLayout dentro do ScrollView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <!-- Seus TextViews e outros elementos dentro do LinearLayout -->

            <TextView
                android:id="@+id/textView"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_background"
                android:gravity="center"
                android:text="Opção de escolha"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_background"
                android:gravity="center"
                android:text="Opção de escolha"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_background"
                android:gravity="center"
                android:text="Opção de escolha"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/calendario_circulo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/circle_background"
                    android:contentDescription="Ícone 1"
                    android:padding="10dp"
                    android:src="@drawable/calendar" />

                <ImageView
                    android:id="@+id/reciclagem_circulo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/circle_background"
                    android:contentDescription="Ícone 2"
                    android:padding="10dp"
                    android:src="@drawable/recycle"
                    />

                <ImageView
                    android:id="@+id/terra_circulo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/circle_background"
                    android:contentDescription="Ícone 3"
                    android:padding="10dp"
                    android:src="@drawable/img" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:background="@drawable/rounded_background"
                android:gravity="center"
                android:text="Opção de escolha"
                android:textColor="#46954A"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_background"
                android:gravity="center"
                android:text="Opção de escolha"
                android:textColor="#46954A"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_background"
                android:gravity="center"
                android:text="Opção de escolha"
                android:textColor="#46954A"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>
    </android.widget.ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
